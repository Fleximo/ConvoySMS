<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp" >
        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="" />
        <TextView
            android:id="@+id/tv_SavePopup_Header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_SavePopup_Header"
            android:textSize="@dimen/header_text_size" />
        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp" >
        <TextView
            android:id="@+id/tv_SaveSettings_Empty1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="" />
        <TextView
            android:id="@+id/tv_SaveSettings_EnterNameForNewSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_SavePopup_SubHeader"
            android:textSize="@dimen/header_text_size" />
        <TextView
            android:id="@+id/tv_SaveSettings_Empty2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp" >
        <TextView
            android:id="@+id/tv_SaveSettings_Empty3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="" />
        <EditText
            android:id="@+id/et_SaveSettings_EnterNameForNewSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/tv_SavePopup_SubHeaderHint"
            android:textSize="@dimen/header_text_size" />
        <TextView
            android:id="@+id/tv_SaveSettings_Empty4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="" />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@drawable/edit_text_style"
        android:layout_margin="4dp" >
	    <LinearLayout
	        android:id="@+id/ll_SaveSettings_SavedSettings"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical" >
	    </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/TextView02"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
        <Button
            android:id="@+id/btn_SaveSettings_Save"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/btn_ChangeLanguage_OK"
            style="@style/btnStyleArsenicHorizontal" />
        <Button
            android:id="@+id/btn_SaveSettings_Cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/btn_ChangeLanguage_Cancel"
            style="@style/btnStyleArsenicHorizontal" />
        <TextView
            android:id="@+id/TextView01"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>
