<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView
        android:id="@+id/tv_CreateUser_Header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_CreateUser_Header"
        android:gravity="center"
        android:layout_gravity="top|center"
        android:layout_margin="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:orientation="vertical"
         >

       <EditText
            android:id="@+id/et_CreateUser_PhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:ems="10"
            android:gravity="center"
            android:inputType="phone"
            android:text="@string/et_Login_DefaultTextPhone"
            android:textSize="25sp"
            android:hint="@string/et_Login_DefaultHintPhone" >
        </EditText>
        
       <EditText
           android:id="@+id/et_CreateUser_PIN"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_margin="10dp"
           android:ems="10"
           android:gravity="center"
           android:inputType="numberPassword"
           android:hint="@string/et_Login_DefaultTextPIN" />
       
       <EditText
           android:id="@+id/et_CreateUser_PINConfirm"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_margin="10dp"
           android:ems="10"
           android:gravity="center"
           android:inputType="numberPassword"
           android:hint="@string/et_CreateUser_PINConfirm" />

       <TextView
           android:id="@+id/textView2"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_margin="10dp"
           android:text="" />

    </LinearLayout>

</FrameLayout>
