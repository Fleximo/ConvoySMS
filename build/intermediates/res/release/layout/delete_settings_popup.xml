<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp" >
        <TextView
            android:id="@+id/tv_DeleteSettings_HeaderEmpty1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="" />
        <TextView
            android:id="@+id/tv_DeleteSettings_Header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_DeletePopup_Header"
            android:textSize="@dimen/header_text_size" />
        <TextView
            android:id="@+id/tv_DeleteSettings_HeaderEmpty2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp" >
        <TextView
            android:id="@+id/tv_DeleteSettings_Empty1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="" />
        <TextView
            android:id="@+id/tv_DeleteSettings_EnterNameForNewSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_DeletePopup_SubHeader"
            android:textSize="@dimen/header_text_size" />
        <TextView
            android:id="@+id/tv_DeleteSettings_Empty2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="" />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@drawable/edit_text_style"
        android:layout_margin="4dp" >
	    <LinearLayout
	        android:id="@+id/ll_DeleteSettings_SavedSettings"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:padding="2dp" >
	    </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/TextView02"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
        <Button
            android:id="@+id/btn_DeleteSettings_Save"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/btn_ChangeLanguage_OK"
            style="@style/btnStyleArsenicHorizontal" />
        <Button
            android:id="@+id/btn_DeleteSettings_Cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/btn_ChangeLanguage_Cancel"
            style="@style/btnStyleArsenicHorizontal"/>
        <TextView
            android:id="@+id/TextView01"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>
