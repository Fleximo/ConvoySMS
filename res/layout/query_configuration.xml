<?xml version="1.0" encoding="utf-8"?> 
<!-- SCROLL AREA -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
    android:layout_gravity="top"
    android:orientation="vertical">
<LinearLayout
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical" >
	<!-- 1.Query Configurations -->
	<LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_margin="2dp"
	        android:orientation="vertical"
	        android:background="@drawable/border" >
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_margin="4dp"
	        android:orientation="horizontal" >
	        <CheckBox
	            android:id="@+id/cb_QueryConfigurations_QueryConfigurations"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/tv_QueryConfigurations_Phone"
	            android:textSize="@dimen/header_text_size" />
	    </LinearLayout>
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_margin="4dp"
	        android:orientation="horizontal" >
	        <!-- <TextView
	            android:id="@+id/tv_QueryConfigurations_Phone"
	            android:layout_width="0dp"
	            android:layout_height="match_parent"
	            android:layout_weight="1"
	            android:text="@string/tv_QueryConfigurations_Phone"
	            android:textSize="@dimen/text_size" /> -->
	        <EditText
	                android:id="@+id/et_QueryConfigurations_Phone"
	                android:layout_width="wrap_content"
	                android:layout_height="match_parent"
	                android:layout_margin="2dp"
	                android:ems="13"
	                android:inputType="phone"
	                android:hint="@string/string_QueryConfigurations_HintPhone"
	                android:maxLength="13"
	                android:gravity="center_horizontal"
	                android:layout_gravity="bottom"
	                android:background="@drawable/edit_text_style" />
	    </LinearLayout>
	</LinearLayout>
	<!-- 2.The hardware configuration of the system -->
	<LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_margin="2dp"
	        android:orientation="vertical"
	        android:background="@drawable/border" >
	        <CheckBox
	            android:id="@+id/cb_QueryConfigurations_HardwareConfigSystem"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/cb_QueryConfigurations_HardwareConfigSystem"
	            android:textSize="@dimen/header_text_size" />
	</LinearLayout>
	<!-- 3.User system settings -->
	<LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_margin="2dp"
	        android:orientation="vertical"
	        android:background="@drawable/border" >
	        <CheckBox
	            android:id="@+id/cb_QueryConfigurations_UserSystemSettings"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/cb_QueryConfigurations_UserSystemSettings"
	            android:textSize="@dimen/header_text_size" />
	</LinearLayout>
	<!-- 4.Monitoring mode settings -->
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="2dp"
		android:orientation="vertical"
		android:background="@drawable/border" >
		<CheckBox
			android:id="@+id/cb_QueryConfigurations_MonitoringModeSettings"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/cb_QueryConfigurations_MonitoringModeSettigs"
			android:textSize="@dimen/header_text_size" />
	</LinearLayout>
	<!-- 5.Subscriber notification settings -->
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="2dp"
		android:orientation="vertical"
		android:background="@drawable/border" >
		<CheckBox
			android:id="@+id/cb_QueryConfigurations_SubscriberNotificationSettings"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/cb_QueryConfigurations_SubscriberNotificationSettings"
			android:textSize="@dimen/header_text_size" />
	</LinearLayout>

</LinearLayout>
</ScrollView>
