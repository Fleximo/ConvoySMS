<?xml version="1.0" encoding="utf-8"?>
<!-- SCROLL AREA --> 
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
<LinearLayout
    android:id="@+id/main_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top"
    android:orientation="vertical" >
    <!-- 0. CURRENT PIN -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="2dp"
        android:background="@drawable/border" >
        <CheckBox
            android:id="@+id/cb_UserSettings_CurrentPIN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="@string/cb_UserSettings_CurrentPIN"
            android:textSize="@dimen/header_text_size"/>
        <EditText
            android:id="@+id/et_UserSettings_CurrentPIN"
            android:labelFor="@id/et_UserSettings_CurrentPIN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLength="4"
            android:text="@string/str_UserSettings_CurrentPIN"
            android:inputType="number"
            android:gravity="center_horizontal"
            android:textSize="@dimen/text_size" >
        </EditText>
    </LinearLayout>
	<!-- 1. NEW PIN -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="2dp"
        android:background="@drawable/border" >
        <CheckBox
            android:id="@+id/cb_UserSettings_NewPIN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="@string/cb_UserSettings_PIN"
            android:textSize="@dimen/header_text_size"/>
        <EditText
            android:id="@+id/et_UserSettings_NewPIN"
            android:labelFor="@id/et_UserSettings_NewPIN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLength="4"
            android:hint="@string/str_UserSettings_HintNewPIN"
            android:inputType="number"
            android:gravity="center_horizontal"
            android:textSize="@dimen/text_size" >
        </EditText>
    </LinearLayout>

    <!-- 2. NUMBER OF BALANCE CHECKING -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="2dp"
        android:background="@drawable/border" >
        <LinearLayout
        	android:layout_width="match_parent"
        	android:layout_height="match_parent"
        	android:orientation="horizontal"
        	android:layout_margin="2dp" >
	        <CheckBox
	            android:id="@+id/cb_UserSettings_BalanceChecking"
	            android:layout_width="0dp"
	            android:layout_height="match_parent"
	            android:layout_weight="1"
	            android:text="@string/cb_UserSettings_BalanceChecking"
	            android:textSize="@dimen/header_text_size" />
	        <Spinner
	            android:id="@+id/spin_UsetSettings_BalanceChecking"
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:paddingLeft="1dp"
	            android:paddingRight="1dp"
	            android:gravity="center"
	            android:textSize="@dimen/text_size" />
		</LinearLayout>
		<LinearLayout
        	android:layout_width="match_parent"
        	android:layout_height="match_parent"
        	android:orientation="horizontal"
        	android:layout_margin="5dp" >
	        <TextView
                android:id="@+id/tv_UserSettings_BalanceCheckingAnother"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/tv_UserSettings_BalanceCheckingAnother"
                android:textSize="@dimen/text_size"
                android:gravity="center_vertical|left"
                android:layout_weight="1" />
	        <EditText
                android:id="@+id/et_UserSettings_BalanceCheckingAnother"
                android:labelFor="@id/et_UserSettings_BalanceCheckingAnother"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ems="5"
                android:inputType="text"
                android:text=""
                android:gravity="center_horizontal"
                android:textSize="@dimen/text_size" />
		</LinearLayout>
    </LinearLayout>
    
    <!-- 3. ACCOUNT BALANCE -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="2dp"
        android:background="@drawable/border" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <CheckBox
                android:id="@+id/cb_UserSettings_AccBalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cb_UserSettings_AccBalance"
                android:textSize="@dimen/header_text_size" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp" >
            <TextView
                android:id="@+id/tv_UserSettings_NumSumPosition"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/tv_UserSettings_NumSumPosition"
                android:textSize="@dimen/text_size"
                android:gravity="center_vertical|left"
                android:layout_weight="4" />
            <EditText
                android:id="@+id/et_UserSettings_NumSumPosition"
                android:labelFor="@id/et_UserSettings_NumSumPosition"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:ems="3"
                android:inputType="number"
                android:text="@string/et_UserSettings_NumSumPosition"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="@dimen/text_size" />
            <TextView
                android:id="@+id/tv_UserSettings_NumSumPositionsEmpty"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text=""
                android:textSize="@dimen/text_size"
                android:gravity="center"
                android:layout_weight="1" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp" >
            <TextView
                android:id="@+id/tv_UserSettings_CriticalBalance"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/tv_UserSettings_CriticalBalance"
                android:textSize="@dimen/text_size"
                android:gravity="center_vertical|left"
                android:layout_weight="4" />
            <EditText
                android:id="@+id/et_UserSettings_CriticalBalance"
                android:labelFor="@id/et_UserSettings_CriticalBalance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ems="3"
                android:inputType="number"
                android:text="@string/et_UserSettings_CriticalBalance"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="@dimen/text_size" />
            <TextView
                android:id="@+id/et_UserSettings_CriticalBalanceDimen"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/et_UserSettings_CriticalBalanceDimen"
                android:textSize="@dimen/text_size"
                android:gravity="center"
                android:layout_weight="1" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp" >
            <TextView
                android:id="@+id/tv_UserSettings_BalanceCheckinngFrequency"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/tv_UserSettings_BalanceCheckinngFrequency"
                android:textSize="@dimen/text_size"
                android:gravity="center_vertical|left"
                android:layout_weight="4" />
            <EditText
                android:id="@+id/et_UserSettings_BalanceCheckinngFrequency"
                android:labelFor="@id/et_UserSettings_BalanceCheckinngFrequency"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:text="@string/et_UserSettings_BalanceCheckinngFrequency"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="@dimen/text_size" />
            <TextView
                android:id="@+id/tv_UserSettings_BalanceCheckinngFrequencyDimen"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/tv_UserSettings_BalanceCheckinngFrequencyDimen"
                android:textSize="@dimen/text_size"
                android:gravity="center"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>
    
	<!-- 4. NUMBER OF CALL ATTEMPTS -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="2dp"
        android:background="@drawable/border" >
        <CheckBox
            android:id="@+id/cb_UserSettings_NumberCallAttempts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cb_UserSettings_NumberCallAttempts"
            android:textSize="@dimen/header_text_size" />
        <EditText
            android:id="@+id/et_UserSettings_NumberCallAttempts"
            android:labelFor="@id/et_UserSettings_NumberCallAttempts"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="number"
            android:max="10"
            android:text="@string/et_UserSettings_NumberCallAttempts"
            android:gravity="center_horizontal"
            android:textSize="@dimen/text_size" >
        </EditText>
    </LinearLayout>

    <!-- 5. REARM -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="2dp"
        android:background="@drawable/border" >
        <CheckBox
            android:id="@+id/cb_UserSettings_Rearm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cb_UserSettings_Rearm"
            android:layout_weight="1"
            android:textSize="@dimen/header_text_size" />
        <Spinner
            android:id="@+id/spin_UserSettings_Rearm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:textSize="@dimen/text_size" />
    </LinearLayout>
    
    <!-- 5. SIREN -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="2dp"
        android:background="@drawable/border" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <CheckBox
                android:id="@+id/cb_UserSettings_Siren"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cb_UserSettings_Siren"
                android:textSize="@dimen/header_text_size" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp" >
            <TextView
                android:id="@+id/tv_UserSettings_SystemSetUnset"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/tv_UserSettings_SystemSetUnset"
                android:textSize="@dimen/text_size"
                android:gravity="center_vertical|left"
                android:layout_weight="1" />
            <Spinner
                android:id="@+id/spin_UserSettings_SystemSetUnset"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:textSize="@dimen/text_size" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp" >
            <TextView
                android:id="@+id/tv_UserSettings_AlarmMode"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/tv_UserSettings_AlarmMode"
                android:textSize="@dimen/text_size"
                android:gravity="center_vertical|left"
                android:layout_weight="1" />
            <Spinner
                android:id="@+id/spin_UserSettings_AlarmMode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:textSize="@dimen/text_size" />
        </LinearLayout>
    </LinearLayout>
    
    <!-- 6. TWO STAGE DISARMING SYSTEM -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="2dp"
        android:background="@drawable/border" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <CheckBox
                android:id="@+id/cb_UserSettings_DisarmingSystem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cb_UserSettings_DisarmingSystem"
                android:textSize="@dimen/header_text_size" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <Spinner
                android:id="@+id/spin_UserSettings_DisarmingSystem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="@dimen/text_size" />
        </LinearLayout>
    </LinearLayout>
    
    <!-- 7. ALL SENSORS DISABLED -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="2dp"
        android:background="@drawable/border" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <CheckBox
                android:id="@+id/cb_UserSettings_AllSensorsDisabled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cb_UserSettings_TiltSens_AllSensEnabled"
                android:textSize="@dimen/header_text_size" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal" >
            <Spinner
        	android:id="@+id/spin_UserSettings_TiltSens_AllSensEnabled"
        	android:layout_width="0dp" 
        	android:layout_height="match_parent"
        	android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>
    
	<!-- 8. SHOCK SENSOR SETTINGS -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="2dp"
        android:background="@drawable/border" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <CheckBox
                android:id="@+id/cb_UserSettings_ShockSensSettings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cb_UserSettings_ShockSensSettings"
                android:textSize="@dimen/header_text_size" />
        </LinearLayout>
        <!-- Warning threshold -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="2dp" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="2dp"
                android:background="@drawable/border" >
	            <LinearLayout
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_margin="3dp" >
	                <TextView
	                    android:id="@+id/tv_UserSettings_WarningThreshold"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:text="@string/tv_UserSettings_WarningThreshold"
	                    android:textSize="@dimen/text_size" />
            	</LinearLayout>
            	<LinearLayout
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_margin="3dp" >
	                <CheckBox
                		android:id="@+id/cb_UserSettings_WarningTrasholdDisabled"
                		android:layout_width="wrap_content"
                		android:layout_height="wrap_content"
                		android:text="@string/cb_UserSettings_WarningTrasholdDisabled"
                		android:textSize="@dimen/text_size" />
            	</LinearLayout>
	            <LinearLayout
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_margin="3dp"
	                android:orientation="horizontal" >
	                <LinearLayout
	                    android:layout_width="wrap_content"
	                    android:layout_height="match_parent"
	                    android:orientation="vertical" >
	                    <TextView
	                        android:id="@+id/tv_UserSettings_WarningTrashold_Heavy"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:gravity="center"
	                        android:text="@string/tv_UserSettings_WarningTrashold_Heavy"
	                        android:textSize="@dimen/text_size" />
	                    <TextView
	                        android:id="@+id/tv_UserSettings_WarningTrashold_HeavyValue"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:layout_gravity="center_horizontal"
	                        android:gravity="center"
	                        android:text="(100)"
	                        android:textSize="@dimen/text_size" />
	                </LinearLayout>
	                <SeekBar
	                    android:id="@+id/sb_UserSettings_WarningTrashold"
	                    android:layout_width="0dp"
	                    android:layout_height="wrap_content"
	                    android:layout_weight="1"
	                    android:layout_gravity="center_vertical"
	                    android:max="95"
	                    android:progress="82"
	                    android:textSize="@dimen/text_size" />
	                <LinearLayout
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:orientation="vertical" >
	                    <TextView
	                        android:id="@+id/tv_UserSettings_WarningTrashold_Weak"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:gravity="center"
	                        android:text="@string/tv_UserSettings_WarningTrashold_Weak"
	                        android:textSize="@dimen/text_size" />
	                    <TextView
	                        android:id="@+id/tv_UserSettings_WarningTrashold_WeakValue"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:layout_gravity="center_horizontal"
	                        android:gravity="center"
	                        android:text="(5)"
	                        android:textSize="@dimen/text_size" />
	                </LinearLayout>
	            </LinearLayout>
	            <LinearLayout
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_margin="3dp" >
	                <TextView
	                    android:id="@+id/tv_UserSettings_WarningTrashold_Value"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:text="@string/tv_UserSettings_WarningTrashold_Value"
	                    android:textSize="@dimen/text_size" />
	                <EditText
	                    android:id="@+id/et_UserSettings_WarningTrashold"
	                    android:labelFor="@id/et_UserSettings_WarningTrashold"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:ems="3"
	                    android:gravity="center_horizontal"
	                    android:inputType="number"
	                    android:text="@string/et_UserSettings_WarningTrashold"
	                    android:textSize="@dimen/text_size" >
	                </EditText>
	            </LinearLayout>
	        </LinearLayout>
	        <!-- Alarm threshold -->
			<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="2dp"
                android:background="@drawable/border" >
	            <LinearLayout
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_margin="3dp" >
	                <TextView
	                    android:id="@+id/tv_UserSettings_AlarmThresholdShockSensor"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:text="@string/tv_UserSettings_AlarmThresholdShockSensor"
	                    android:textSize="@dimen/text_size"
	                     />
	            </LinearLayout>
	            <LinearLayout
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_margin="3dp" >
	                <CheckBox
                		android:id="@+id/cb_UserSettings_AlarmTrasholdDisabled"
                		android:layout_width="wrap_content"
                		android:layout_height="wrap_content"
                		android:text="@string/cb_UserSettings_AlarmTrasholdDisabled"
                		android:textSize="@dimen/text_size" />
	            </LinearLayout>
	            <LinearLayout
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_margin="3dp" >
	                <LinearLayout
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:orientation="vertical" >
	                    <TextView
	                        android:id="@+id/tv_UserSettings_AlarmThresholdHeavy"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:gravity="center"
	                        android:text="@string/tv_UserSettings_AlarmThresholdHeavy"
	                        android:textSize="@dimen/text_size" />
	                    <TextView
	                        android:id="@+id/tv_UserSettings_AlarmThresholdHeavyValue"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:layout_gravity="center_horizontal"
	                        android:gravity="center"
	                        android:text="(100)"
	                        android:textSize="@dimen/text_size" />
	                </LinearLayout>
	                <SeekBar
	                    android:id="@+id/sb_UserSettings_AlarmTrashold"
	                    android:layout_width="0dp"
	                    android:layout_height="wrap_content"
	                    android:layout_weight="1"
	                    android:layout_gravity="center"
	                    android:max="95"
	                    android:progress="25"
	                    android:textSize="@dimen/text_size" />
	                <LinearLayout
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:orientation="vertical" >
	                    <TextView
	                        android:id="@+id/tv_UserSettings_AlarmThresholdWeak"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:gravity="center"
	                        android:text="@string/tv_UserSettings_AlarmThresholdWeak"
	                        android:textSize="@dimen/text_size" />
	                    <TextView
	                        android:id="@+id/tv_UserSettings_AlarmThresholdWeakValue"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:layout_gravity="center_horizontal"
	                        android:gravity="center"
	                        android:text="(5)"
	                        android:textSize="@dimen/text_size" />
	                </LinearLayout>
	            </LinearLayout>
	            <LinearLayout
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_margin="3dp" >
	                <TextView
	                    android:id="@+id/tv_UserSettings_AlarmThresholdValue"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:text="@string/tv_UserSettings_AlarmThresholdValue"
	                    android:textSize="@dimen/text_size" />
	               <EditText
	                    android:id="@+id/et_UserSettings_AlarmTrashold"
	                    android:labelFor="@id/et_UserSettings_AlarmTrashold"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:ems="3"
	                    android:gravity="center_horizontal"
	                    android:inputType="number"
	                    android:text="@string/et_UserSettings_AlarmTrashold"
	                    android:textSize="@dimen/text_size" >
	                </EditText>
	            </LinearLayout>    
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    
	<!-- 9. TILT SENSOR SETTINGS -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="2dp"
        android:background="@drawable/border" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp" >
            <CheckBox
                android:id="@+id/cb_UserSettings_TiltSensor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cb_UserSettings_TiltSensor"
                android:textSize="@dimen/header_text_size" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp" >
            <TextView
                android:id="@+id/tv_UserSettings_TiltSensorThreshold"
                android:layout_width="wrap_content"
